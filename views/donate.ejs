          </div>
        </div>
      </div>
    </nav>


    <div class="container">
      <div class="row justify-content-center">
        <div class="col-8 mt-5">
          <div class="card border-2 shadow">
            <h3 class="text-center mb-3 mt-3">Silahkan pilih nominal donasi </h3>
            <div
            class="btn-group mb-5 ms-2 me-2"
            role="group"
            aria-label="Basic radio toggle button group"
            >
            <form action="/donasi/<%= id %>?_method=PATCH" method="POST">
              <input
                type="radio"
                class="btn-check"
                name="donasi"
                value="10000"
                id="btnradio1"
              />
              <label class="btn btn-outline-primary" for="btnradio1">10.000</label>
    
              <input
                type="radio"
                class="btn-check"
                name="donasi"
                value="20000"
                id="btnradio2"
              />
              <label class="btn btn-outline-primary" for="btnradio2">20.000</label>
    
              <input
                type="radio"
                class="btn-check"
                name="donasi"
                value="50000"
                id="btnradio3"
              />
              <label class="btn btn-outline-primary" for="btnradio3">50.000</label>
    
              <input
                type="radio"
                class="btn-check"
                name="donasi"
                value="100000"
                id="btnradio4"
              />
              <label class="btn btn-outline-primary" for="btnradio4">100.000</label>
            </div>
            
