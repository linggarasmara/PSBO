  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-xs">
      <div class="container-fluid">
        <img src="/images/logo.png" alt="logo" height="60px" width="60px" />


        <div class="d-flex">
          <div>
            <a class="btn" style="color: white" href="#">Riwayat</a>
