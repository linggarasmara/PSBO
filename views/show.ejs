<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
    <title>Details</title>

    <style>
      * {
        margin: 0;
        padding: 0;
        font-family: "Roboto";
      }
      html {
        overflow-x: hidden;
      }
      nav {
        background-color: #3f37c9;
      }
      .jumbotron2 {
        background-color: #ffafcc;
      }
      .footer {
        padding: 2rem;
        background-color: #3f37c9;
      }
      .tombol{
        background-color: #f72585;
        color: white;
      }
    </style>

    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet"/>

  </head>

    <!-- navbar -->
    <nav class="navbar navbar-expand-xs">
      <div class="container-fluid">
        <img src="images/logo.png" alt="logo" height="60px" width="60px" />

        <div class="d-flex">
          <div>
            <a class="btn" style="color: white" href="#">Riwayat</a>
          </div>
          <div>
            <a class="btn" style="color: white" href="#">Tentang</a>
          </div>
          <div>
            <a
              class="btn border-0"
              href="/list"
              target="_blank"
              style="background-color: #f72585; color: white"
              >Galang dana</a
            >
          </div>
        </div>
      </div>
    </nav>


    <div class="container">
      <div class="row justify-content-center">
        <div class="col-8 mt-5">
          <div class="card border-0">
            <h1 class="card-text text-center" style="text-transform: capitalize; margin-bottom: 2rem;"><strong><%= e.question5 %></strong></h1>
            <h5 class="text-center">created by  <strong><%= e.creator.username %></strong></h5>
            <img
              src="data:image/<%=e.gambar.contentType%>;base64,<%=e.gambar.data.toString('base64')%>"
              class="card-img-top"
              alt="gambar"
            />
            <div class="progress my-3 mx-3">
              <div
                class="progress-bar"
                role="progressbar"
                style="width: <%= e.donasi/e.question6*100 %> "
                aria-valuenow="<%= e.donasi %> "
                aria-valuemin="0"
                aria-valuemax="<%= e.question6 %> "
              ></div>
            </div>
            <h3 style="display: flex; justify-content: space-between;"><span class="d-inline-block text-primary">Rp. <%= e.donasi %>,00</span><span class="d-inline-block text-success">Rp. <%= e.question6 %>,00</span></h3>
            <div class="card-body">
                <a
                href="/donate/<%= e._id %>"
                type="button"
                class="btn btn-lg shadow btn-primary border-0 mb-5 tombol"
                style="width: 100%;"
                >
                Donate
            </a>
              <p class="card-text"><%= e.question9 %></p>
              <div>
                <% if(currentUser && (String(currentUser._id) === String(e.creator._id))) { %>
                <a
                  href="/edit/<%= e._id %>"
                  target="_blank"
                  class="btn btn-warning"
                  >Edit</a
                >
                <form
                  method="POST"
                  action="/delete/<%= e._id %>?_method=DELETE"
                  class="d-inline"
                >
                  <button class="btn btn-danger">Delete</button>
                </form>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"
  ></script>
  <script>
    var myModal = document.getElementById("myModal");
    var myInput = document.getElementById("myInput");

    myModal.addEventListener("shown.bs.modal", function() {
      myInput.focus();
    });
  </script>
</html>
